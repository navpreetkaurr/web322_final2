<div class="row">
    <div class="col-md-12">
        <h2>{{department.departmentName}} - Department: {{department.departmentId}}</h2>
        <hr />
        <form method="post" action="/department/update">
            <input id="departmentId" name="departmentId" type="hidden" value="{{department.departmentId}}" />
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="departmentName">Department&nbsp;Name</label>
                        <input class="form-control" id="departmentName" name="departmentName" type="text" value="{{department.departmentName}}" />
                    </div>
                </div>
            </div>
            <hr />
            <input type="submit" class="btn btn-primary pull-right" value="Update Department" /><br /><br /><br />
        </form>
    </div>
</div>